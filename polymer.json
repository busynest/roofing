{
    "entrypoint": "index.html",
    "shell": "src/application-shell.js",
    "npm": true,
    "moduleResolution": "node",
    "fragments": [
      "src/page-404.js",
      "src/primary-contract.js",
      "src/purchase-order.js",
      "src/send-feedback.js",
      "src/sub-contract.js",
      "src/warranty-contract.js",
      "src/router.js",
      "src/metadata.js",
      "src/result-item.js",
      "src/asphalt-roofing.js",
      "src/asphalt-ventilation.js",
      "src/asphalt-flashing.js"
    ],
  
    "sources": [
      "src/**"
    ],
  
    "extraDependencies": [
      "manifest.json",
      "package.json",
      "sitemap.xml",
      "robots.txt",
      "node_modules/@webcomponents/webcomponentsjs/*.js"
    ],
  
    "builds": [{
      "bundle": { "inlineScripts": false },
      "js":     { "transformModulesToAmd": true, "minify": true },
      "css":    { "minify": true },
      "html":   { "minify": true },
      "addServiceWorker": true
    }]
  }